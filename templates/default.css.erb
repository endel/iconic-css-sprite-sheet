/**
 * Iconic iconset by P.J. Onori (http://www.somerandomdude.com/work/iconic/)
 *
 * Generated with iconic-css-spritesheet - https://github.com/endel/iconic-css-spritesheet
 * by Endel Dreyer - http://github.com/endel
 *
 * Color: <%= @color %>
 * Size: <%= @size %>x<%= @size %>
 * Date: <%= @date %>
 */

.iconic { width: <%= @size %>px; height: <%= @size %>px; display: inline-block; }

.iconic.<%= @color %> { background: url(<%= @output %>.png); }
<% @icons.each_with_index do |icon, i| %>
.iconic.<%= @color %>.<%= icon %> { background-position: <%= (-@size * i).to_s %>px 0px; }
<% end %>
